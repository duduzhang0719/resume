.container {
  padding: 20rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

.route-list {
  padding: 20rpx;
}

.route-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.route-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.day-item {
  margin-bottom: 30rpx;
}

.day-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.schedule-item {
  display: flex;
  margin-bottom: 15rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.time {
  width: 120rpx;
  font-size: 24rpx;
}

.location {
  flex: 1;
  font-size: 28rpx;
  text-decoration: underline;
}

.action-buttons {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.flex-1 {
  flex: 1;
}

.mr-10 {
  margin-right: 10rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 24rpx;
  padding: 10rpx 0;
  background: #f5f5f5;
  color: #333;
  border-radius: 6rpx;
} 